void banks(String a,String b,String c) {
	try {
		System.out.println("Loading......");
		Thread.sleep(5000);
	}catch(InterruptedException e){
		}
	System.out.println("1."+a+"\n2."+b+"\n3."+c);
	Scanner scan=new Scanner(System.in);
	int n=scan.nextInt();
	if(n==1) {
		System.out.println("The Bank Name is:"+a);
		System.out.println("The Intrest in This Bank is:5%");
		System.out.println("The Main Branch is Located at:Avadi");
		System.out.println("The Service of Bank is:Good");
	}
	else if(n==2) {
		System.out.println("The Bank Name is:"+b);
		System.out.println("The Intrest in This Bank is:7%");
		System.out.println("The Main Branch is Located at:Anna Nagar");
		System.out.println("The Service of Bank is:Average");
	}
	else if(n==3) {
		System.out.println("The Bank Name is:"+c);
		System.out.println("The Intrest in This Bank is:9%");
		System.out.println("The Main Branch is Located at:Parris");
		System.out.println("The Service of Bank is:Better");
	}
	else {
		System.out.println("The Bank is Currently UnAvailable");
	}
}//closing of banks method
void ticketbooking() {
	try {
		System.out.println("Loading......");
		Thread.sleep(5000);
	}catch(InterruptedException e){
		}
	System.out.println("        Welcome to Ticket Booking      ");
	Scanner scan=new Scanner(System.in);
	System.out.println("Please Enter the Number of Passengers:");
	String[] string=new String[scan.nextInt()];
	System.out.println("Enter The Name And Age of The Passengers:");
	scan.nextLine();
	for(int i=0;i<string.length;i++) {
		string[i]=scan.nextLine();
	}
	int price;
	System.out.println("Please Enter the Number of Seats:");
	int seats=scan.nextInt();
	System.out.println("Please select from chennai to where:");
	System.out.println();
	System.out.println("1.Chennai to Delhi\n2.Chennai to Bangalore\n3.Chennai to Mysore\n4.Chennai to Ooty\n5.Chennai to Agra\n6.Chennai to Jaipur\n7.Chennai to Mumbai");
	int n=scan.nextInt();
	if (n==1)
{
System.out.println();
System.out.println("Your Tickets has been  Booked Successfully\n    Your Details Are    ");
System.out.println();
System.out.println("The Train is From Chennai To Delhi");
System.out.println("The Train Name is:Rajdhani Express");
System.out.println("The Rate of a Ticket per Person is:2000");
price=seats*2000;
System.out.println("The Passengers Name And The Age are:");
for(String str:string) {
	System.out.println(str);
}
	System.out.println("The Price of The Tickets are:"+price);
}
	else if(n==2) {
		System.out.println();
		System.out.println("Your Tickets has been Booked Successfully\n    Your Details Are    ");
		System.out.println();
		System.out.println("The Train is From Chennai To Bangalore");
		System.out.println("The Train Name is:Brindavanam Express");
		System.out.println("The Rate of a Ticket per Person is:1500");
	price=seats*1500;
	System.out.println("The Passengers Name And The Age are:");
