void hotels() {
	try {
		System.out.println("Loading......");
		Thread.sleep(5000);
	}catch(InterruptedException e){
		}
	System.out.println("1.ITC Grand Chola\n2.The Leela Palace\n3.Crowne Plaza");
	Scanner scan=new Scanner(System.in);
	int n=scan.nextInt();
	if(n==1) {
		System.out.println("The Hotel Name is:ITC Grand Chola");
		System.out.println("The Amount for Single Room Per Day is:3000");
		System.out.println("The Amount for Single Room Per Day With Food is:3200");
		System.out.println("The Amount for Single Room Per Day With Food  And With Swiming Pool is:3500");
		System.out.println("The Star Rating Of The Hotel is:5");
		}
	else if(n==2) {
		System.out.println("The Hotel Name is:The Leela Palace");
		System.out.println("The Amount for Single Room Per Day is:2000");
		System.out.println("The Amount for Single Room Per Day With Food is:2200");
		System.out.println("The Amount for Single Room Per Day With Food  And With Swiming Pool is:2500");
		System.out.println("The Star Rating Of The Hotel is:4.5");
		}
	else if(n==3) {
		System.out.println("The Hotel Name is:Crowne Plaza");
		System.out.println("The Amount for Single Room Per Day is:1000");
		System.out.println("The Amount for Single Room Per Day With Food is:1200");
