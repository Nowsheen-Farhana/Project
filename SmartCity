public class SmartCity {
public static void main(String[] args) {
		// TODO Auto-generated method stub
	char choice;
	Main m=new Main();
m.display();
do {
	System.out.println("This will help You To Search Your Needed Spots");
System.out.println("\nIf You Are A Student Then Please Select\n###1.Student\nIf You Are A Tourist Then Please Select\n----->2.###Tourist\nOthers Then Please Select\n###3.Others");
Scanner scan=new Scanner(System.in);
int s=scan.nextInt();
if(s==1) {
	Set<String> l=new TreeSet<String>();
	l.add("1.Schools\n2.Colleges");
	for(String temp:l)
	{
		System.out.println(temp);
	}
   int n=scan.nextInt();
	switch(n) {
	case 1:
		m.schools();
		break;
	case 2:
		m.colleges();
		break;
	default:
		System.out.println("Kindly Select The Correct Case");
	}//closing of switch
}//closing of if
else if(s==2) {
	Set<String> hs=new HashSet<String>();
	hs.add("Kindly Select:\n1.HOTELS\n2.THEATERS\n3.MALLS\n4.TICKET BOOKING");
	for(String temp:hs)
	{
		System.out.println(temp);
	}
	int n=scan.nextInt();
	switch(n) {
	case 1:
		m.hotels();
		break;
	case 2:
		m.theaters();
		break;
	case 3:
		m.malls();
		break;
	case 4:
		m.ticketbooking();
		break;
		default:
			System.out.println("Kindly Select The Correct Case");
	}//closing of switch
}//closing of else if
else if(s==3) {
		try{
			Queue<String> q1=new LinkedList<String>();
		 q1.add("Click\n1.HOTELS\n2.THEATERS\n3.APARTMENTS\n4.SCHOOLS\n5.COLLEGES\n6.MALLS\n7.HOSPITALS\n8.BANKS\n9.TICKET BOOKING");
		 for(String temp:q1)
			{
				System.out.println(temp);
			}
		int n=scan.nextInt();
		switch(n) {
	case 1:
		m.hotels();
		break;
	case 2:
		m.theaters();
		break;
	case 3:
		m.appartments();
		break;
	case 4:
		m.schools();
		break;
	case 5:
		m.colleges();
		break;
	case 6:
		m.malls();
		break; 
	case 7:
		m. hospitals();
		break;
	case 8:
		m.banks("HDFC Bank", "Union Bank", "State Bank Of India"); 
		break;
	case 9:
		m.ticketbooking();
		break;
	default:
			throw new InvalidCase();
	}//closing of switch
		}//closing of try
	catch(InvalidCase c) {
		}
	}//closing of else if
else {
	System.out.println("Kindly Select the Correct Option");
}
System.out.println();
System.out.println("Do You Want to Search again? ");
System.out.println();
System.out.println("Please Click y/n ");
choice=scan.next().charAt(0);
}//closing of do loop
while(choice=='y' || choice=='Y');
}//closing of main method
	}//closing of smart city class
	
